<p id="notice"><%= notice %></p>

<h1>Purchases</h1>

<table class="table">
  <thead>
    <tr>
      <th>Ticket quantity</th>
      <th>Payment amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.ticket_quantity %></td>
        <td><%= number_to_currency(purchase.payment_amount) %></td>
        <td><%= link_to 'Show', purchase, :class=>"btn btn-info" %></td>

        <% if can? :manage, purchase %>
        <td><%= link_to 'New Purchase', new_purchase_path, :class=>"btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_purchase_path(purchase), :class=>"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

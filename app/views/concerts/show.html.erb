<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @concert.name %>
</p>

<p>
  <strong>Start date:</strong>
  <%= @concert.start_date %>
</p>

<p>
  <strong>End date:</strong>
  <%= @concert.end_date %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency(@concert.price) %>
</p>

<p>
  <strong>Tickets available:</strong>
  <%= @concert.tickets_remaining %>
</p>
<p>
  <strong>Venue:</strong>
  <%= @concert.venue.name if @concert.venue %> |

  <% if @concert.tickets_remaining == 0 %>
<p><strong>CONCERT SOLD OUT!</strong></p>
<% else %>

<% if current_user %>
<% if current_user.has_role? :admin %>
<td><%= link_to 'Venue Details', venue_path(@concert.venue) %></td>
<% end %>
<% end %>
</p>

<% if current_user %>
  <% if current_user.has_role? :customer %>
    <p><%= link_to 'Purchase', concert_purchase_path(@concert.id), :class => "btn btn-primary" %></p>
  <% end %>
<% else %>
  <p>
  <strong>You must be registered and logged in to purchase tickets.</strong>
  </p>
<% end %>

<% if current_user %>
<% if current_user.has_role? :admin %>
<%= link_to 'Edit', edit_concert_path(@concert) %> |
<%= link_to 'Back', concerts_path %>
<% end %>
<% end %>
<% end %>
